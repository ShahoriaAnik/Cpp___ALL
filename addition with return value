#include <iostream>

using namespace std;
class addNumber{
    private:
       int a;
       int b;
    public:
       void gateValue();
       int addValue();
       void show();
};
void addNumber::gateValue(){
    cin>>a;
    cin>>b;
}
int addNumber::addValue(){
    return a+b;
}
void addNumber::show(){
    cout<<addValue()<<endl;
}

int main()
{
    addNumber ad1,ad2,ad3;
    ad1.gateValue();
    ad1.show();
    cout<<endl;
    ad2.gateValue();
    ad2.show();
    cout<<endl;
  return 0;
}
